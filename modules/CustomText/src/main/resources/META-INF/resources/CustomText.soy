{namespace DDMCustomText}

/**
 * Defines the delegated template for the form field.
 */
{deltemplate ddm.field variant="'CustomText'"}
	{call .render data="all" /}
{/deltemplate}

/**
 * Prints the form field.
 */
{template .render}
	{@param name: string}
	{@param pathThemeImages: string}
	{@param value: ?}
	{@param visible: bool}
	{@param? dir: string}
	{@param? label: string}
	{@param? predefinedValue: string}
	{@param? readOnly: bool}
	{@param? required: bool}
	{@param? showLabel: bool}
	{@param? tip: string}
	{@param? maxchars: ?}

	{let $displayValue: $value ? $value : $predefinedValue ? $predefinedValue : '' /}

	<div class="form-group {$visible ? '' : 'hide'} CustomText-form-field"
		data-fieldname="{$name}">
		{if $showLabel or $required}
			<label for="{$name}">
				{if $showLabel}
					{$label}{sp}
				{/if}

				{if $required}
					<svg aria-hidden="true" class="lexicon-icon lexicon-icon-asterisk reference-mark">
						<use xlink:href="{$pathThemeImages}/lexicon/icons.svg#asterisk" />
					</svg>
				{/if}
			</label>
		{/if}

		{if $showLabel}
			{if $tip}
				<span class="form-text">{$tip}</span>
			{/if}
		{/if}

		<div class="input-group">
		
			<div class="input-group-item">
			<p>tesggt {$maxchars} after</p> 
				<input class="field form-control"
					maxlength="{$maxchars}"
					{if $dir}dir="{$dir}"{/if}
					{if $readOnly}disabled{/if}
					id="{$name}"
					name="{$name}"
					type="text"
					value="{$displayValue}">
			</div>
		</div>
	</div>
{/template}
